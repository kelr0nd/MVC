<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Styles/bootstrap4.css">
</head>
<body>
   <nav class="navbar navbar-toggleable-md navbar-light bg-faded bg-primary navbar-inverse">
        <div class="navbar-collapse collapse">
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <span class="navbar-brand">Book store</span>
            <div class="collapse navbar-collapse" id="navbarText">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        @Html.ActionLink("Главная страница", "List", "Book", null, new { @class = "nav-link" })       
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Добавить книгу", "CreateBook", "Book", null, new { @class = "nav-link" })
                    </li>
                </ul>
                <span class="navbar-text">
                    We are the power!
                </span>
            </div>
        </div>
    </nav>

<div class="container">
    @RenderBody()
</div>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js" ></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
    <script src="~/Scripts/addLike.js"></script>
    <script src="~/Scripts/reportReview.js"></script>
</body>
</html>
